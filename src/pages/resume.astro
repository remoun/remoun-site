<style>
  .resume-contact {
    font-size: var(--size-sm);
    color: var(--text-secondary);
  }

  .resume-contact a {
    color: var(--text-secondary);
  }

  .resume-contact a:hover {
    color: var(--accent);
  }

  .resume-entry ul {
    margin: 0.5rem 0 0;
    padding-left: 1.25rem;
  }

  .resume-entry li {
    margin-bottom: 0.25rem;
  }

  .resume-actions {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .resume-download {
    font-family: var(--font-display);
    font-size: var(--size-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .fka {
    font-weight: 400;
    color: var(--text-secondary);
  }

  .experience-list .resume-entry {
    margin-bottom: 0.75rem;
  }

  .resume-entry--minor {
    opacity: 0.7;
  }

  .resume-entry--minor .resume-entry__title {
    font-weight: 500;
  }

  .awards-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .awards-list li {
    margin-bottom: 0.5rem;
    padding-left: 1rem;
    position: relative;
  }

  .awards-list li::before {
    content: "·";
    position: absolute;
    left: 0;
    color: var(--accent);
  }
</style>
