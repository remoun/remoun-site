---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Date Remoun" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="robots" content="noindex" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400..700;1,400..700&family=Newsreader:ital,opsz,wght@0,6..72,200..800;1,6..72,200..800&display=swap" rel="stylesheet">
  <title>{title}</title>
</head>

<style is:global>
  @import '../styles/global.css';

  :root {
    --love-accent: #e67e22;
    --love-accent-soft: #fdf2e9;
    --love-card-bg: #ffffff;
    --love-border-radius: 16px;
    --love-shadow: 0 4px 20px rgba(230, 126, 34, 0.08);
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --love-card-bg: #251f1c;
      --love-accent-soft: #2d241e;
      --love-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }
  }

  body {
    background-color: var(--bg);
    background-image: radial-gradient(var(--border) 1px, transparent 1px);
    background-size: 40px 40px;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
  }

  /* Intro section */
  .intro {
    text-align: center;
    padding: 2rem 0 4rem;
    position: relative;
  }

  .intro h1 {
    font-size: clamp(2.5rem, 8vw, 4rem);
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: var(--text);
    font-weight: 800;
    letter-spacing: -0.04em;
  }

  .intro .tagline-container {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .intro .tagline {
    font-family: var(--font-display);
    font-size: var(--size-lg);
    font-weight: 500;
    color: var(--accent);
    margin: 0;
    opacity: 0.9;
  }

  /* Greeting */
  .greeting {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 1.25rem;
  }

  .greeting p {
    background: var(--love-accent-soft);
    display: inline-block;
    padding: 0.5rem 1.5rem;
    border-radius: 100px;
    border: 1px solid var(--border);
  }

  /* Photo placeholders - Polaroid Style */
  .photo-placeholder {
    background: white;
    padding: 1rem 1rem 3rem;
    box-shadow: var(--love-shadow);
    transform: rotate(-1deg);
    border: 1px solid var(--border);
    margin: 3rem auto;
    max-width: 400px;
    transition: transform 0.3s ease;
  }

  .photo-placeholder:nth-of-type(even) {
    transform: rotate(1.5deg);
  }

  .photo-placeholder:hover {
    transform: rotate(0deg) scale(1.02);
  }

  .photo-placeholder::before {
    content: 'ðŸ“¸';
    display: flex;
    aspect-ratio: 1;
    background: var(--love-warm-gray);
    margin-bottom: 1rem;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    border-radius: 4px;
  }

  @media (prefers-color-scheme: dark) {
    .photo-placeholder {
      background: #2d241e;
    }
    .photo-placeholder::before {
      background: #1a1614;
    }
  }

  .photo-placeholder::after {
    content: attr(data-caption);
    display: block;
    text-align: center;
    font-family: 'Newsreader', serif;
    font-style: italic;
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  .photo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
  }

  .photo-grid .photo-placeholder {
    margin: 0;
    max-width: none;
  }

  /* Cards / Note boxes */
  .note-box {
    background: var(--love-card-bg);
    border: 1px solid var(--border);
    border-radius: var(--love-border-radius);
    padding: 2rem;
    margin: 2.5rem 0;
    box-shadow: var(--love-shadow);
    position: relative;
    overflow: hidden;
  }

  .note-box::before {
    content: 'âœ¨';
    position: absolute;
    top: 1rem;
    right: 1rem;
    opacity: 0.2;
    font-size: 1.5rem;
  }

  /* Lists */
  .about-list, .enjoy-list, .not-list {
    list-style: none;
    padding: 0;
    display: grid;
    gap: 1rem;
  }

  .about-list li, .enjoy-list li, .not-list li {
    background: var(--love-card-bg);
    padding: 1rem 1.5rem;
    border-radius: 12px;
    border: 1px solid var(--border);
    margin: 0;
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .about-list li::before, .enjoy-list li::before, .not-list li::before {
    content: 'â†’';
    color: var(--accent);
    font-weight: bold;
    position: static;
  }

  .enjoy-list {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }

  /* Read-me grid */
  .read-me-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin: 2.5rem 0;
  }

  .read-me-item {
    background: var(--love-card-bg);
    border: 1px solid var(--border);
    border-radius: var(--love-border-radius);
    padding: 1.5rem;
    box-shadow: var(--love-shadow);
  }

  .read-me-item strong {
    display: block;
    font-family: var(--font-display);
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
    color: var(--accent);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Testimonials */
  .testimonial {
    background: var(--love-card-bg);
    border-radius: var(--love-border-radius);
    padding: 2.5rem;
    margin: 2rem 0;
    border: 1px solid var(--border);
    box-shadow: var(--love-shadow);
    position: relative;
  }

  .testimonial::before {
    content: '"';
    position: absolute;
    top: -1rem;
    left: 2rem;
    font-size: 5rem;
    font-family: var(--font-display);
    color: var(--accent);
    opacity: 0.1;
    line-height: 1;
  }

  .testimonial-author {
    margin-top: 1.5rem !important;
    font-family: var(--font-display);
    font-weight: 600;
    color: var(--text);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .testimonial-author::before {
    content: '';
    width: 20px;
    height: 2px;
    background: var(--accent);
    display: block;
  }

  /* CTA */
  .cta-section {
    background: var(--love-accent-soft);
    padding: 4rem 2rem;
    border-radius: var(--love-border-radius);
    text-align: center;
    margin: 4rem 0;
    border: 2px dashed var(--accent);
  }

  .cta-button {
    display: inline-block;
    background: var(--accent);
    color: white;
    padding: 1.25rem 3rem;
    border-radius: 100px;
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.25rem;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    box-shadow: 0 10px 20px rgba(230, 126, 34, 0.2);
  }

  .cta-button:hover {
    background: var(--accent-hover);
    transform: translateY(-5px) scale(1.05);
    box-shadow: 0 15px 30px rgba(230, 126, 34, 0.3);
    color: white;
  }

  /* Typography tweaks */
  h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-top: 5rem;
    margin-bottom: 2rem;
    position: relative;
  }

  h2::after {
    content: '';
    display: block;
    width: 60px;
    height: 4px;
    background: var(--accent);
    margin: 0.5rem auto 0;
    border-radius: 2px;
  }

  h3 {
    font-size: 1.75rem;
    margin-top: 3rem;
    color: var(--text);
  }

  @media (max-width: 600px) {
    .container {
      padding: 2rem 1rem;
    }
    .read-me-grid {
      grid-template-columns: 1fr;
    }
    .intro h1 {
      font-size: 3rem;
    }
  }
</style>

<body>
  <div class="container">
    <main>
      <slot />
    </main>
  </div>
</body>
</html>
