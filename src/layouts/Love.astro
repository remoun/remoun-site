---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Date Remoun" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="robots" content="noindex" />
  <title>{title}</title>
</head>

<style is:global>
  @import '../styles/global.css';
</style>

<body>
  <div class="container">
    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <p>Last updated: January 2026</p>
    </footer>
  </div>
</body>
</html>

<style is:global>
  /* Love page specific styles */

  /* Intro section */
  .intro {
    text-align: center;
    padding: 1rem 0 2rem;
    color: var(--text);
  }

  .intro h1 {
    color: var(--accent);
  }

  .intro .tagline {
    font-family: var(--font-body);
    font-size: var(--size-lg);
    font-style: italic;
    color: var(--text-secondary);
    margin: 0.15rem 0;
  }

  /* Greeting */
  .greeting {
    text-align: center;
    padding: 1.5rem 0;
    margin-bottom: 1rem;
  }

  .greeting p {
    margin: 0.5rem 0;
  }

  /* Fun fact callout */
  .fun-fact {
    background: var(--bg-secondary);
    padding: 1.25rem 1.5rem;
    margin: 1.5rem 0;
    border-radius: 6px;
    border-left: 3px solid var(--accent);
  }

  /* Photo placeholders */
  .photo-placeholder {
    background: var(--bg-secondary);
    border: 2px dashed var(--border);
    border-radius: 6px;
    padding: 3rem 2rem;
    text-align: center;
    color: var(--text-secondary);
    font-size: var(--size-sm);
    margin: 2rem 0;
  }

  .photo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
    margin: 1.5rem 0;
  }

  .photo-grid .photo-placeholder {
    margin: 0;
    padding: 2rem 1rem;
  }

  /* About list (borderless cards) */
  .about-list {
    padding: 0;
    margin: 1rem 0;

    li {
      padding: 0.75rem 0;
      padding-left: 0;
      border-bottom: 1px solid var(--border);

      &::before { display: none; }
      &:last-child { border-bottom: none; }
    }
  }

  /* Two-column enjoy list */
  .enjoy-list {
    padding: 0;
    columns: 2;
    column-gap: 2rem;

    li {
      break-inside: avoid;
      padding: 0.4rem 0;
      padding-left: 0;

      &::before { display: none; }
    }
  }

  @media (max-width: 500px) {
    .enjoy-list {
      columns: 1;
    }
  }

  /* Not-looking-for list */
  .not-list {
    padding: 0;

    li {
      padding: 0.5rem 0;

      &::before { display: none; }
    }
  }

  /* Read-me grid */
  .read-me-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin: 1.5rem 0;
  }

  .read-me-item {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 6px;
    padding: 1rem 1.25rem;
    font-size: var(--size-sm);
  }

  .read-me-item strong {
    display: block;
    margin-bottom: 0.35rem;
    color: var(--accent);
  }

  @media (max-width: 550px) {
    .read-me-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Note boxes */
  .note-box {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 6px;
    padding: 1.25rem 1.5rem;
    margin: 2rem 0;
  }

  .note-box strong {
    color: var(--accent);
  }

  /* Testimonials */
  .testimonial-intro {
    font-style: italic;
    color: var(--text-secondary);
    margin-top: -0.5rem;
    margin-bottom: 1.5rem;
  }

  .testimonial {
    background: var(--bg-secondary);
    border-radius: 6px;
    padding: 1.5rem;
    margin: 1rem 0;
  }

  .testimonial p {
    margin: 0;
  }

  .testimonial p + p {
    margin-top: 1rem;
  }

  .testimonial-author {
    margin-top: 1rem !important;
    font-size: var(--size-sm);
    font-style: normal;
    color: var(--text-secondary);
  }

  /* CTA section */
  .cta-section {
    text-align: center;
    margin: 2rem 0;
  }

  .cta-button {
    display: inline-block;
    font-family: var(--font-display);
    font-size: var(--size-base);
    font-weight: 600;
    color: white;
    background: var(--accent);
    padding: 0.85rem 2rem;
    border-radius: 4px;
    text-decoration: none;
    transition: background 0.2s ease, transform 0.15s ease;
  }

  .cta-button:hover {
    background: var(--accent-hover);
    color: white;
    transform: translateY(-2px);
  }

  .cta-or {
    margin-top: 0.75rem;
    font-size: var(--size-sm);
    color: var(--text-secondary);
  }

  /* Footer note */
  .footer-note {
    text-align: center;
    font-size: var(--size-sm);
    color: var(--text-secondary);
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .footer-note + .footer-note {
    margin-top: 0.5rem;
    padding-top: 0;
    border-top: none;
  }
</style>
