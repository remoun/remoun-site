---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Date Remoun" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="robots" content="noindex" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400..700;1,400..700&family=Newsreader:ital,opsz,wght@0,6..72,200..800;1,6..72,200..800&display=swap" rel="stylesheet">
  <title>{title}</title>
</head>

<style is:global>
  @import '../styles/global.css';

  :root {
    --love-accent: #3063c7;
    --love-accent-soft: #f0f4ff;
    --love-accent-link: #4a7ee0;
    --love-card-bg: #ffffff;
    --love-border-radius: 16px;
    --love-shadow: 0 4px 20px rgba(48, 99, 199, 0.08);
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --love-card-bg: #1a1c23;
      --love-accent-soft: #1e2433;
      --love-accent-link: #6a9eff;
      --love-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }
  }

  body {
    background-color: var(--bg);
    text-align: left;
    background-attachment: fixed;
    position: relative;
  }

  /* Add a slight opacity to the background pattern to make it even softer */
  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(circle at 2px 2px, var(--love-accent) 1px, transparent 0);
    background-size: 32px 32px;
    opacity: 0.15;
    z-index: -1;
    pointer-events: none;
  }

  @media (prefers-color-scheme: dark) {
    body::before {
      opacity: 0.1;
    }
  }

  a {
    color: var(--love-accent-link);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--love-accent);
  }

  p, li, .testimonial, .read-me-item {
    text-align: left;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem 1.5rem;
  }

  /* Generic content block for consistent backgrounding */
  .content-block {
    background: var(--love-card-bg);
    border: 1px solid var(--border);
    border-radius: var(--love-border-radius);
    padding: 2rem;
    margin: 2.5rem 0;
    box-shadow: var(--love-shadow);
    text-align: left;
  }

  .content-block p:last-child {
    margin-bottom: 0;
  }

  /* Site header for Love page */
  .love-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 0;
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--border);
  }

  .love-header .logo {
    font-family: var(--font-display);
    font-weight: 800;
    font-size: 1.5rem;
    color: var(--love-accent);
    text-decoration: none;
    letter-spacing: -0.04em;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .love-header .logo::before {
    content: 'üíô';
    font-size: 1.2rem;
  }

  .love-header nav {
    display: flex;
    gap: 2rem;
  }

  .love-header nav a {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 700;
    color: var(--text);
    text-decoration: none;
    transition: all 0.2s ease;
    position: relative;
  }

  .love-header nav a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--love-accent);
    transition: width 0.2s ease;
  }

  .love-header nav a:hover {
    color: var(--love-accent);
  }

  .love-header nav a:hover::after {
    width: 100%;
  }

  /* Intro section */
  .intro {
    text-align: left;
    padding: 4rem 0 6rem;
    position: relative;
    max-width: 900px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 3rem;
    align-items: center;
  }

  .intro-content {
    z-index: 2;
  }

  .intro h1 {
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    line-height: 1.05;
    margin-bottom: 2rem;
    color: var(--text);
    font-weight: 800;
    letter-spacing: -0.05em;
    text-wrap: balance;
  }

  .intro .tagline-container {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    border-left: 3px solid var(--love-accent);
    padding-left: 1.5rem;
    margin-top: 2rem;
    animation: slideIn 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  @keyframes slideIn {
    from { opacity: 0; transform: translateX(-20px); }
    to { opacity: 1; transform: translateX(0); }
  }

  .intro .tagline {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--text-secondary);
    margin: 0;
    opacity: 0.9;
    line-height: 1.4;
    transition: color 0.3s ease;
  }

  .intro .tagline:hover {
    color: var(--love-accent);
  }

  .intro-visual {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    perspective: 1000px;
  }

  .hero-polaroid {
    background: white;
    padding: 1rem 1rem 4rem;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    transform: rotate(3deg);
    border: 1px solid var(--border);
    width: 100%;
    max-width: 320px;
    position: relative;
    z-index: 1;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .hero-polaroid:hover {
    transform: rotate(0deg) translateY(-10px) scale(1.05);
    box-shadow: 0 30px 60px rgba(48, 99, 199, 0.2);
  }

  .hero-polaroid img {
    width: 100%;
    height: auto;
    object-fit: contain;
    border-radius: 2px;
    margin-bottom: 1rem;
    display: block;
  }

  .hero-polaroid::before {
    display: none;
  }

  .hero-polaroid::after {
    content: 'Hi, I\'m Remoun';
    position: absolute;
    bottom: 1.5rem;
    left: 0;
    right: 0;
    text-align: center;
    font-family: 'Newsreader', serif;
    font-style: italic;
    font-size: 1.25rem;
    color: var(--text-secondary);
  }

  .hero-decoration {
    position: absolute;
    width: 120%;
    height: 120%;
    background: radial-gradient(circle, var(--love-accent-soft) 0%, transparent 70%);
    z-index: 0;
    top: -10%;
    left: -10%;
    border-radius: 50%;
  }

  /* Greeting */
  .greeting {
    text-align: center;
    margin-bottom: 4rem;
    font-size: 1.1rem;
  }

  .greeting p {
    background: var(--love-accent-soft);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.6rem 1.25rem;
    border-radius: 100px;
    border: 1px solid var(--border);
    font-weight: 500;
  }

  @media (max-width: 850px) {
    .intro {
      grid-template-columns: 1fr;
      text-align: center;
      padding: 2rem 0 4rem;
      gap: 4rem;
    }
    .intro .tagline-container {
      border-left: none;
      padding-left: 0;
      align-items: center;
    }
    .hero-polaroid {
      margin: 0 auto;
    }
    .greeting {
      text-align: center;
    }
  }

  /* Photo placeholders - Polaroid Style */
  .photo-placeholder, .photo-card {
    background: white;
    padding: 1rem 1rem 3rem;
    box-shadow: var(--love-shadow);
    transform: rotate(-1deg);
    border: 1px solid var(--border);
    margin: 3rem auto;
    max-width: 400px;
    transition: transform 0.3s ease;
  }

  .photo-placeholder:nth-of-type(even), .photo-card:nth-of-type(even) {
    transform: rotate(1.5deg);
  }

  .photo-placeholder:hover, .photo-card:hover {
    transform: rotate(0deg) scale(1.02);
  }

  .photo-card img {
    width: 100%;
    height: auto;
    object-fit: contain;
    border-radius: 2px;
    margin-bottom: 1rem;
    display: block;
  }

  .photo-card::after {
    content: attr(data-caption);
    display: block;
    text-align: center;
    font-family: 'Newsreader', serif;
    font-style: italic;
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  .photo-placeholder::before {
    content: 'üì∏';
    display: flex;
    aspect-ratio: 1;
    background: var(--love-warm-gray);
    margin-bottom: 1rem;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    border-radius: 4px;
  }

  @media (prefers-color-scheme: dark) {
    .photo-placeholder, .photo-card {
      background: #2d241e;
    }
    .photo-placeholder::before {
      background: #1a1614;
    }
  }

  .photo-placeholder::after {
    content: attr(data-caption);
    display: block;
    text-align: center;
    font-family: 'Newsreader', serif;
    font-style: italic;
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  .photo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
  }

  .photo-grid .photo-placeholder {
    margin: 0;
    max-width: none;
  }

  /* Cards / Note boxes */
  .note-box {
    background: var(--love-card-bg);
    border: 1px solid var(--border);
    border-radius: var(--love-border-radius);
    padding: 2rem;
    margin: 2.5rem 0;
    box-shadow: var(--love-shadow);
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .note-box:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(48, 99, 199, 0.12);
  }

  .note-box::before {
    content: '‚ú®';
    position: absolute;
    top: 1rem;
    right: 1rem;
    opacity: 0.2;
    font-size: 1.5rem;
    transition: transform 0.5s ease;
  }

  .note-box:hover::before {
    transform: rotate(20deg) scale(1.2);
    opacity: 0.4;
  }

  .note-box.casual-note {
    border: 2px solid var(--love-accent);
    background: var(--love-accent-soft);
  }

  .note-box.casual-note::before {
    content: 'üçÉ';
    opacity: 0.3;
  }

  /* Lists */
  ul {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    width: 100%;
    margin: 1rem 0;
  }

  li {
    background: var(--love-card-bg);
    padding: 0.75rem 1.25rem;
    border-radius: 12px;
    border: 1px solid var(--border);
    margin: 0;
    display: block;
    list-style: none;
    width: 100%;
    position: relative;
    overflow: hidden;
    text-align: left;
  }

  /* Re-implement arrow for block layout */
  .container ul li::before {
    content: '‚Üí' !important;
    display: inline-block !important;
    position: relative !important;
    top: 0 !important;
    left: 0 !important;
    width: auto !important;
    height: auto !important;
    background: none !important;
    color: var(--love-accent) !important;
    margin-right: 0.75rem !important;
    font-family: var(--font-display) !important;
    font-weight: bold !important;
    line-height: inherit !important;
    border-radius: 0 !important;
    flex-shrink: 0 !important;
  }

  /* Ensure no other pseudo-elements are interfering */
  li::after {
    display: none !important;
  }

  /* Specific grid for things I enjoy */
  .enjoy-grid ul {
    display: grid !important;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)) !important;
    gap: 0.75rem !important;
    flex-direction: row !important;
  }

  li strong {
    margin-right: 0.35rem;
    display: inline;
  }

  /* Read-me grid */
  .read-me-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin: 2.5rem 0;
  }

  .read-me-item {
    background: var(--love-card-bg);
    border: 1px solid var(--border);
    border-radius: var(--love-border-radius);
    padding: 1.5rem;
    box-shadow: var(--love-shadow);
  }

  .read-me-item strong {
    display: block;
    font-family: var(--font-display);
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
    color: var(--love-accent);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Testimonials */
  .testimonial {
    background: var(--love-card-bg);
    border-radius: var(--love-border-radius);
    padding: 2.5rem;
    margin: 2rem 0;
    border: 1px solid var(--border);
    box-shadow: var(--love-shadow);
    position: relative;
  }

  .testimonial::before {
    content: '"';
    position: absolute;
    top: -1rem;
    left: 2rem;
    font-size: 5rem;
    font-family: var(--font-display);
    color: var(--love-accent);
    opacity: 0.1;
    line-height: 1;
  }

  .testimonial-author {
    margin-top: 1.5rem !important;
    font-family: var(--font-display);
    font-weight: 600;
    color: var(--text);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .testimonial-author::before {
    content: '';
    width: 20px;
    height: 2px;
    background: var(--love-accent);
    display: block;
  }

  /* CTA */
  .cta-section {
    background: var(--love-accent-soft);
    padding: 2rem;
    border-radius: var(--love-border-radius);
    text-align: center;
    margin: 4rem 0;
    border: 2px dashed var(--love-accent);
  }

  .cta-button {
    display: inline-block;
    background: var(--love-accent);
    color: white;
    padding: 1.25rem 3rem;
    border-radius: 100px;
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.25rem;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    box-shadow: 0 10px 20px rgba(48, 99, 199, 0.2);
  }

  .cta-button:hover {
    background: #254da3;
    transform: translateY(-5px) scale(1.05);
    box-shadow: 0 15px 30px rgba(48, 99, 199, 0.3);
    color: white;
  }

  /* Typography tweaks */
  h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-top: 5rem;
    margin-bottom: 2rem;
    position: relative;
  }

  h2::after {
    content: '';
    display: block;
    width: 60px;
    height: 4px;
    background: var(--love-accent);
    margin: 0.5rem auto 0;
    border-radius: 2px;
  }

  h3 {
    font-size: 1.75rem;
    margin-top: 3rem;
    color: var(--text);
  }

  @media (max-width: 600px) {
    .container {
      padding: 2rem 1rem;
    }
    .read-me-grid {
      grid-template-columns: 1fr;
    }
    .intro h1 {
      font-size: 3rem;
    }
  }
</style>

<body>
  <div class="container">
    <header class="love-header">
      <a href="/" class="logo">remoun.love</a>
      <nav>
        <a href="#who-i-am">Who I Am</a>
        <a href="#what-im-looking-for">Looking For</a>
        <a href="#reach-out">Reach Out</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
  </div>
</body>
</html>
