---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Date Remoun" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="robots" content="noindex" />
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,600;1,400&family=Nunito:wght@400;500;600&display=swap" rel="stylesheet">
</head>

<style is:global>
  @import '../styles/global.css';
</style>
<body>
  <div class="page-wrapper">
    <main class="content">
      <slot />
    </main>
    
    <footer class="site-footer">
      <p>Last updated: December 2025</p>
    </footer>
  </div>
</body>
</html>

<style is:global>
  :root {
    /* Soft queer palette */
    --bg: #faf8f6;
    --bg-card: #ffffff;
    --text: #3d3a37;
    --text-secondary: #6b6560;
    --accent: #b784a7;
    --accent-hover: #a06d91;
    --accent-soft: #f3e8ef;
    --accent-secondary: #7eb5a6;
    --border: #e8e3de;
    --highlight: #fdf5f9;
    
    --font-display: 'Lora', Georgia, serif;
    --font-body: 'Nunito', system-ui, sans-serif;
    
    --size-sm: 0.9rem;
    --size-base: 1.1rem;
    --size-lg: 1.35rem;
    --size-xl: 1.75rem;
    --size-2xl: 2.25rem;
    --size-3xl: 2.75rem;
    
    --max-width: 42rem;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --bg: #1c1a19;
      --bg-card: #262322;
      --text: #ede9e5;
      --text-secondary: #a8a099;
      --accent: #d4a5c9;
      --accent-hover: #e0bbd7;
      --accent-soft: #352d33;
      --accent-secondary: #8cc4b3;
      --border: #3a3633;
      --highlight: #2d2628;
    }
  }

  *, *::before, *::after {
    box-sizing: border-box;
  }

  html {
    font-size: 17px;
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-body);
    font-size: var(--size-base);
    line-height: 1.75;
    color: var(--text);
    background: var(--bg);
    margin: 0;
    padding: 0;
    -webkit-font-smoothing: antialiased;
  }

  .page-wrapper {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .content {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 3rem 1.5rem 4rem;
    flex: 1;
  }

  h1, h2, h3 {
    font-family: var(--font-display);
    line-height: 1.3;
    margin: 0 0 1rem;
  }

  h1 {
    font-size: var(--size-2xl);
    font-weight: 500;
    color: var(--accent);
    text-align: center;
    margin-bottom: 0.25rem;
  }

  h2 {
    font-size: var(--size-xl);
    font-weight: 500;
    margin-top: 3rem;
    margin-bottom: 1rem;
    color: var(--text);
  }

  h3 {
    font-size: var(--size-lg);
    font-weight: 500;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--text-secondary);
  }

  p {
    margin: 0 0 1rem;
  }

  a {
    color: var(--accent);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
    transition: color 0.15s ease;
  }

  a:hover {
    color: var(--accent-hover);
  }

  ul {
    padding-left: 1.25rem;
    margin: 0 0 1.5rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  strong {
    font-weight: 600;
    color: var(--text);
  }

  .intro {
    text-align: center;
    padding: 1rem 0 2rem;
  }

  .intro .tagline {
    font-family: var(--font-display);
    font-size: var(--size-lg);
    font-style: italic;
    color: var(--text-secondary);
    margin: 0.15rem 0;
  }

  .greeting {
    text-align: center;
    padding: 1.5rem 0;
    margin-bottom: 1rem;
  }

  .greeting p {
    margin: 0.5rem 0;
  }

  .fun-fact {
    background: var(--highlight);
    padding: 1.25rem 1.5rem;
    margin: 1.5rem 0;
    border-radius: 12px;
    border-left: 4px solid var(--accent);
  }

  .photo-placeholder {
    background: var(--accent-soft);
    border: 2px dashed var(--border);
    border-radius: 12px;
    padding: 3rem 2rem;
    text-align: center;
    color: var(--text-secondary);
    font-size: var(--size-sm);
    margin: 2rem 0;
  }

  .photo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
    margin: 1.5rem 0;
  }

  .photo-grid .photo-placeholder {
    margin: 0;
    padding: 2rem 1rem;
  }

  .about-list {
    padding: 0;

    li {
      padding: 0.75rem 0;
      padding-left: 0;
      border-bottom: 1px solid var(--border);

      &::before { display: none; }
      &:last-child { border-bottom: none; }
    }
  }

  .enjoy-list {
    padding: 0;
    columns: 2;
    column-gap: 2rem;

    li {
      break-inside: avoid;
      padding: 0.4rem 0;
      padding-left: 0;

      &::before { display: none; }
    }
  }

  @media (max-width: 500px) {
    .enjoy-list {
      columns: 1;
    }
  }

  .not-list {
    padding: 0;

    li {
      padding: 0.5rem 0;

      &::before { display: none; }
    }
  }

  .read-me-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin: 1.5rem 0;
  }

  .read-me-item {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 10px;
    padding: 1rem 1.25rem;
    font-size: var(--size-sm);
  }

  .read-me-item strong {
    display: block;
    margin-bottom: 0.35rem;
    color: var(--accent);
  }

  @media (max-width: 550px) {
    .read-me-grid {
      grid-template-columns: 1fr;
    }
  }

  .note-box {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 10px;
    padding: 1.25rem 1.5rem;
    margin: 2rem 0;
    font-size: var(--size-base);
  }

  .note-box strong {
    color: var(--accent-secondary);
  }

  .testimonial-intro {
    font-style: italic;
    color: var(--text-secondary);
    margin-top: -0.5rem;
    margin-bottom: 1.5rem;
  }

  .testimonial {
    background: var(--highlight);
    border-radius: 12px;
    padding: 1.5rem;
    margin: 1rem 0;
  }

  .testimonial p {
    margin: 0;
  }

  .testimonial-author {
    margin-top: 1rem !important;
    font-size: var(--size-sm);
    font-style: normal;
    color: var(--text-secondary);
  }

  .cta-section {
    text-align: center;
    margin: 2rem 0;
  }

  .cta-button {
    display: inline-block;
    font-family: var(--font-body);
    font-size: var(--size-base);
    font-weight: 600;
    color: white;
    background: var(--accent);
    padding: 0.85rem 2rem;
    border-radius: 2rem;
    text-decoration: none;
    transition: background 0.2s ease, transform 0.15s ease;
  }

  .cta-button:hover {
    background: var(--accent-hover);
    color: white;
    transform: translateY(-2px);
  }

  .cta-or {
    margin-top: 0.75rem;
    font-size: var(--size-sm);
    color: var(--text-secondary);
  }

  .footer-note {
    text-align: center;
    font-size: var(--size-sm);
    color: var(--text-secondary);
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .site-footer {
    text-align: center;
    padding: 1.5rem;
    font-size: var(--size-sm);
    color: var(--text-secondary);
  }

  @media (max-width: 600px) {
    h1 { font-size: var(--size-xl); }
    h2 { font-size: var(--size-lg); }
    .content { padding: 2rem 1rem 3rem; }
  }
</style>
